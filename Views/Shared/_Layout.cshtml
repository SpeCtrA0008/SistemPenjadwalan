<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - AdminDashboardApp</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
        }

        .sidebar {
            width: 200px;
            padding: 30px 20px;
            background-color: #fff;
            border-right: 1px solid #e0e0e0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .sidebar img.logo {
                width: 90px;
                display: block;
                margin: 0 auto 30px auto;
            }

            .sidebar a {
                display: block;
                padding: 10px 5px;
                font-weight: 600;
                color: #000;
                text-decoration: none;
                margin-bottom: 10px;
            }

                .sidebar a:hover,
                .sidebar a.active {
                    background-color: #f0f0f0;
                    border-radius: 5px;
                }

        .sidebar-section-title {
            font-size: 12px;
            color: #888;
            text-transform: uppercase;
            font-weight: bold;
            margin-top: 10px;
            margin-bottom: 5px;
        }

        .sidebar-bottom {
            margin-top: auto;
        }

        .logo {
            height: 60px;
            margin-bottom: 30px;
        }
    </style>
    <style>
        .bg-light-success {
            background-color: #d4edda;
        }

        .bg-light-warning {
            background-color: #fff3cd;
        }

        .bg-light-danger {
            background-color: #f8d7da;
        }
    </style>

</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar d-flex flex-column justify-content-between">
            <div>
                <img src="~/images/Pertamina.png" alt="Logo" class="logo" asp-append-version="true" />
                <nav>
                    <a href="/Jadwal" class="@(Context.Request.Path.StartsWithSegments("/Jadwal") ? "active" : "")">Penjadwalan</a>
                    <a href="/Rekap" class="@(Context.Request.Path.StartsWithSegments("/Rekap") ? "active" : "")">Rekapan</a>
                </nav>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-grow-1 p-4">
            @RenderBody()
            @RenderSection("Scripts", required: false)
        </div>
    </div>
</body>
</html>
